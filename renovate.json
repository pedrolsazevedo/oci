{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platform": "github",
  "repositories": [
    "pedrolsazevedo/oci"
  ],
  "dockerfile": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDatasources": [
        "github-actions"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
